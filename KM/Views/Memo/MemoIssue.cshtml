                                        </div>
                                        <div class="form-group col-2">
                                            <label for="ddl_broker">Broker</label>
                                            @Html.DropDownList("ddl_broker", (MultiSelectList)ViewBag.FormDisplayNameList, "Please Select...", new { @class = "form-control form-control-sm", @placeholder = "Broker", @id = "ddl_broker" })
                                        </div>
                                        <div class="form-group col-2">
                                            <label for="ddl_delivery_type">Delivery Type</label>
                                            @Html.DropDownList("ddl_delivery_type", (MultiSelectList)ViewBag.FormDisplayNameList, "Please Select...", new { @class = "form-control form-control-sm", @placeholder = "Broker", @id = "ddl_delivery_type" })
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="form-group col-2">
                                                <label for="ddl_assort">Assort</label>
                                                @Html.DropDownList("ddl_assort", (MultiSelectList)ViewBag.FormDisplayNameList, "Please Select...", new { @class = "form-control form-control-sm", @placeholder = "Party", @id = "ddl_assort" })
                                            </div>
                                            <div class="form-group col-2">
                                                <label for="ddl_sieve">Sieve</label>
                                                @Html.DropDownList("ddl_sieve", (MultiSelectList)ViewBag.FormDisplayNameList, "Please Select...", new { @class = "form-control form-control-sm", @placeholder = "Broker", @id = "ddl_sieve" })
                                            </div>
                                            <div class="form-group col-2">
                                                <label for="ddl_sub_sieve">Sub Sieve</label>
                                                @Html.DropDownList("ddl_sub_sieve", (MultiSelectList)ViewBag.FormDisplayNameList, "Please Select...", new { @class = "form-control form-control-sm", @placeholder = "Broker", @id = "ddl_sub_sieve" })
                                            </div>
                                            <div class="col-1 form-group">
                                                <label for="txtPcs">Pcs</label>
                                                <input type="text" class="form-control form-control-sm" id="txtPcs">
                                            </div>
                                            <div class="col-1 form-group">
                                                <label for="txtCarat">Carat</label>
                                                <input type="text" class="form-control form-control-sm" id="txtCarat">
                                            </div>
                                            <div class="col-1 form-group">
                                                <label for="txtRate">Rate</label>
                                                <input type="text" class="form-control form-control-sm" id="txtRate">
                                            </div>
                                            <div class="col-1 form-group">
                                                <label for="txtAmount">Amount</label>
                                                <input type="text" class="form-control form-control-sm" id="txtAmount">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-2 form-group">
                                                <input type="button" id="btnAdd" class="btn btn-primary" value="Add">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-body" style="height : 200px;">
                                        <div style="overflow: auto;" class="table-responsive">
                                            <div style="overflow: auto; max-height: 600px;">
                                                <div id="gridboxmap1" class="box-body table-responsive no-padding">
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="row">
                                        <div class="col-3 form-group">
                                            <input type="text" class="form-control form-control-sm" id="txtRemarks" placeholder="Remarks">
                                        </div>
                                        <div class="col-3 form-group">
                                            <input type="text" class="form-control form-control-sm" id="txtSpecialRemarks" placeholder="Special Remarks">
                                        </div>
                                        <div class="col-3 form-group">
                                            <input type="text" class="form-control form-control-sm" id="txtClientRemarks" placeholder="Client Remarks">
                                        </div>
                                        <div class="col-3 form-group">
                                            <input type="text" class="form-control form-control-sm" id="txtPaymentRemarks" placeholder="Payment Remarks">
                                        </div>
                                    </div>
                                </div>
                                @*<div class="card-footer">

                                    </div>*@
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer justify-content-between">
                    <input type="button" id="btnSave" class="btn btn-primary" value="Save" onclick="SaveForm()">
                    <input type="button" id="btnClear" class="btn btn-primary" value="Clear" onclick="Clear()">
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
</section>
