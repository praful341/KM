
@{
    ViewBag.Title = "MemoIssue";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .table td
    {
        padding:.35rem;
    }
</style>
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Memo Issue</h1>
            </div>
            <div class="col-sm-6">
                <button type="button" class="btn btn-success float-right" data-toggle="modal" data-target="#modal-xl"><i class="fas fa-plus"></i> New Memo</button>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        @*<h5 class="mb-2">Info Box</h5>*@
        <div class="row">
            <div class="col-md-4 col-sm-6 col-12">
                <div class="info-box">
                    <span class="info-box-icon bg-info"><i class="far fas fa-file-invoice"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">Total OutStanding Memos</span>
                        <span id="lbl_totol_outstanding" class="info-box-number">0</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <div class="col-md-4 col-sm-6 col-12">
                <div class="info-box">
                    <span class="info-box-icon bg-success"><i class="fab fa-sketch"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">Total OutStanding Memo's Carats</span>
                        <span id="lbl_totol_outstanding_carat" class="info-box-number">0</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <div class="col-md-4 col-sm-6 col-12">
                <div class="info-box">
                    <span class="info-box-icon bg-warning"><i class="far fas fa-file-invoice-dollar"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">Total OutStanding Memo's Value</span>
                        <span id="lbl_totol_outstanding_value" class="info-box-number">0</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                @*<div class="card-header">
                        <h3 class="card-title">Web Pages Master</h3>
                    </div>*@
                <!-- /.card-header -->
                <div class="card-body">
                    @*<div id="tbl_memo_outstanding" class="box-body table-responsive no-padding">
                        </div>*@
                    <table id="tbl_memo_outstanding" cellspacing="0" cellpadding="0" class="table table-bordered table-hover">
                        <thead class="uppercase">
                            <tr>
                                <th>Date</th>
                                <th>Memo No</th>
                                <th>Party</th>
                                <th>Broker</th>
                                <th>Issue Carat</th>
                                <th>Return Carat</th>
                                <th>Rejection Carat</th>
                                <th>OutStanding Carat</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                        <tfoot></tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modal-xl">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Extra Large Modal</h4>
